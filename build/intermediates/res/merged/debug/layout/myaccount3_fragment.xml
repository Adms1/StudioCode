<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_top" />

    <RelativeLayout
        android:id="@+id/rel_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/header" >

        <TextView
            android:id="@+id/txtBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="My Account"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>

    
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/app_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtStar"
                android:text="Which facility would you like to attend?"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner1_sites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTitle"
                android:background="@drawable/drop_down1"
                android:drawSelectorOnTop="true"
                android:paddingLeft="10dp"
                android:prompt="@string/hint_select_site"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_sites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTitle"
                android:layout_gravity="center_vertical"
                android:background="@drawable/drop_down1"
                android:gravity="left|center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Choose a location"
                android:textColor="@color/app_text" 
                android:enabled="false"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txtStar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txtStar"
                        android:text="How did you hear about us?"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </RelativeLayout>

                <Spinner
                    android:id="@+id/spinner_masterasd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drop_down1"
                    android:drawSelectorOnTop="true"
                    android:paddingLeft="10dp"
                    android:prompt="@string/selectSite"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_master"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/drop_down1"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="Select"
                    android:textColor="@color/app_text" 
                    android:visibility="gone"
                    android:enabled="false"
                    />

                <Spinner
                    android:id="@+id/spinner_child_level2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/drop_down1"
                    android:drawSelectorOnTop="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="30dp"
                    android:visibility="gone" />
                
                 <Button
                    android:id="@+id/btn_secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/drop_down1"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Select"
                    android:textColor="@color/app_text" 
                    android:visibility="gone"
                    android:enabled="false"/>
                 

                <EditText
                    android:id="@+id/edtChildLevel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:imeOptions="actionDone"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:enabled="false" />

                <Spinner
                    android:id="@+id/spinner_child_level1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/drop_down1"
                    android:drawSelectorOnTop="true"
                    android:paddingLeft="10dp"
                    android:visibility="gone"
                    android:enabled="false" />
                
                <Button
                    android:id="@+id/btn_third_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/drop_down1"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Select"
                    android:textColor="@color/app_text" 
                    android:visibility="gone"
                    android:enabled="false"/>
                

                <EditText
                    android:id="@+id/edtChildLevel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:imeOptions="actionDone"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:visibility="gone" 
                    android:enabled="false"/>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="@color/btn_blue"
                    android:padding="10dp"
                    android:text="Submit"
                    android:textColor="@color/white" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    <!-- Previous view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/app_bg"
        android:orientation="vertical" 
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtStar"
                android:text="Which facility would you like to attend?"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner1_sites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTitle"
                android:background="@drawable/drop_down1"
                android:drawSelectorOnTop="true"
                android:paddingLeft="10dp"
                android:prompt="@string/hint_select_site" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/txtStar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txtStar"
                        android:text="How did you hear about us?"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/edtHearAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:imeOptions="actionDone"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/spinner_master"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/drop_down1"
                    android:drawSelectorOnTop="true"
                    android:paddingLeft="10dp"
                    android:prompt="@string/selectSite"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/spinner_child_level1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/drop_down1"
                    android:drawSelectorOnTop="true"
                    android:paddingLeft="10dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edtChildLevel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:hint="@string/hint_employee"
                    android:imeOptions="actionDone"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/spinner_child_level2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/drop_down1"
                    android:drawSelectorOnTop="true"
                    android:paddingLeft="10dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edtChildLevel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:imeOptions="actionDone"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="@color/btn_blue"
                    android:padding="10dp"
                    android:text="Submit"
                    android:textColor="@color/white" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>