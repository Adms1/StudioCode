<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >
    <View 
        android:id="@+id/view_temp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="2dp"
	    android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/tv_chkld_item_name"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="Name"
	        android:gravity="top|left"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="2.5dp"
	        android:textColor="@color/app_text" />
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
		android:layout_marginRight="2.5dp"
	    android:layout_marginLeft="2.5dp"
	    android:orientation="vertical">
	    <TextView 
	        android:id="@+id/tv_chkin_item_diving"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Diving Block"
	        android:textColor="@color/black"
	        android:textStyle="bold" />
	    <Button
	        android:id="@+id/btn_chkld_item_divingblock"
	        android:layout_width="match_parent"
	        android:layout_height="25dp"
	        android:paddingLeft="5dp"
	        android:background="@drawable/drop_down1"
	        android:gravity="left|center_vertical"
	        android:text="Yes"
	        android:textColor="@color/app_text" />
	    </LinearLayout>
		
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:layout_weight="1"
	   	android:layout_marginRight="5dp"
	    android:layout_marginLeft="2.5dp">
		<TextView 
		    android:id="@+id/tv_chkin_item_end"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="End Lane"
	        android:textColor="@color/black"
	        android:textStyle="bold" />
	    <Button
	        android:id="@+id/btn_chkld_item_endlane"
	        android:layout_width="match_parent"
	        android:layout_height="25dp"
	        android:background="@drawable/drop_down1"
	        android:gravity="left|center_vertical"
	        android:text="Yes"
	        android:paddingLeft="5dp"
	        android:textColor="@color/app_text" />
	    </LinearLayout>
	</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_chkld_event"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Event#"
                android:textColor="@color/app_text" />

            <TextView
                android:id="@+id/tv_chkld_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Age Group"
                android:textColor="@color/app_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_chkld_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Distance"
                android:textColor="@color/app_text" />

            <TextView
                android:id="@+id/tv_chkld_stroke"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Stroke"
                android:textColor="@color/app_text" />
        </LinearLayout>

        	<LinearLayout
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_margin="5dp"
        	    android:orientation="horizontal" >

        	    <TextView
        	        android:id="@+id/tv_chkld_besttime"
        	        android:layout_width="0dp"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="center_vertical"
        	        android:layout_weight="1"
        	        android:text="Best Time"
        	        android:textColor="@color/app_text" />

        	</LinearLayout>

    </LinearLayout>

	    <CheckBox
	        android:id="@+id/chb_chkld_check"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:button="@drawable/customdrawablecheckbox"
	        android:layout_marginTop="10dp"
	        android:layout_marginRight="10dp" />
	</LinearLayout>
</LinearLayout>
