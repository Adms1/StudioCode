<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/student_back">

        <TextView
            android:id="@+id/txtStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Haley"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/txtLabelViewResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="view results"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:textColor="#FF8D31"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/txtLblRibbonCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ribbon Count"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textColor="@android:color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtLblParticipant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:text="Participant"/>
        <TextView
            android:id="@+id/txtParticipant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="35"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtLblTimeImprovement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:text="Time Improvement"/>
        <TextView
            android:id="@+id/txtTimeImprovement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="10"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtLblTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:text="Total"/>
        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="45"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtLblTropies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trophies"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textColor="@android:color/black"/>

    <!--<ListView
        android:id="@+id/listTropiesCount"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gray_border"
        android:divider="@color/gray_light"
        android:dividerHeight="1dp"/>-->

    <LinearLayout
        android:id="@+id/llTrophyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>