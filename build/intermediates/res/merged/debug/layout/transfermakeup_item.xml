<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg" >
    

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_tm_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Name:"
                android:textColor="@color/app_text" />

            <TextView
                android:id="@+id/tv_tm_item_lesson"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Lesson:"
                android:textColor="@color/app_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_tm_item_site"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Site:"
                android:textColor="@color/app_text" />

            <TextView
                android:id="@+id/tv_tm_item_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Date:"
                android:textColor="@color/app_text" />
        </LinearLayout>

        	<LinearLayout
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_margin="5dp"
        	    android:orientation="horizontal" >

        	    <TextView
        	        android:id="@+id/tv_tm_item_att"
        	        android:layout_width="0dp"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="center_vertical"
        	        android:layout_weight="1"
        	        android:text="Attendance:"
        	        android:textColor="@color/app_text" />

        	    <TextView
        	        android:id="@+id/tv_tm_item_time"
        	        android:layout_width="0dp"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="center_vertical"
        	        android:layout_weight="1"
        	        android:text="Time:"
        	        android:textColor="@color/app_text" />
        	</LinearLayout>

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_margin="5dp"
			    android:orientation="horizontal" >

			    <Button
			        android:id="@+id/btn_tm_item_lt_os"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical"
			        android:layout_weight="1"
			        android:background="@drawable/drop_down1"
			        android:paddingBottom="5dp"
			        android:paddingTop="5dp"
					android:layout_marginRight="5dp"
			        android:text="Lesson Type"
			        android:paddingLeft="5dp"
			        android:gravity="left|center_vertical"
			        android:textColor="@color/app_text" />

			    <Button
			        android:id="@+id/btn_tm_item_select"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical"
			        android:layout_weight="1"
			        android:background="@color/text_blue"
			        android:paddingBottom="10dp"
			        android:paddingTop="10dp"
			        android:text="Select"
			        android:textColor="@color/white" />
			</LinearLayout>

</LinearLayout>
