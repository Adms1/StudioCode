<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >
        
    <TextView
        android:id="@+id/tv_schedule3_instructorname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:padding="5dp"
        android:text="Instructor name"
        android:textColor="@color/white" /> 
        
        <LinearLayout
            android:id="@+id/lvExp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@color/textbox_color"
            android:dividerHeight="1dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >
                <TextView 
                    android:id="@+id/tv_sundaydate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sun\nDate"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <LinearLayout 
                    android:id="@+id/ll_sunday_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >
                <TextView 
                    android:id="@+id/tv_mondaydate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mon\nDate"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <LinearLayout 
                    android:id="@+id/ll_monday_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >
                <TextView 
                    android:id="@+id/tv_tuedaydate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tue\nDate"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <LinearLayout 
                    android:id="@+id/ll_tueday_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >
                <TextView 
                    android:id="@+id/tv_weddaydate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wed\nDate"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <LinearLayout 
                    android:id="@+id/ll_wedday_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >
                <TextView 
                    android:id="@+id/tv_thudaydate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thu\nDate"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <LinearLayout 
                    android:id="@+id/ll_thuday_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >
                <TextView 
                    android:id="@+id/tv_fridaydate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fri\nDate"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <LinearLayout 
                    android:id="@+id/ll_friday_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >
                <TextView 
                    android:id="@+id/tv_satdaydate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sat\nDate"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <LinearLayout 
                    android:id="@+id/ll_satday_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>