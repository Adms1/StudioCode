<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:padding="5dp" >

    <TextView
        android:id="@+id/txtStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StudentName"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtStudentName"
        android:shrinkColumns="1"
        android:stretchColumns="1" >

        <TableRow>

            <TextView
                android:id="@+id/txtMeetsAttended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Meets Atteded"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtMeetsAttendedValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="5"
                android:textColor="@color/black" 
                android:gravity="center_horizontal"></TextView>"
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txtParticipationRibbons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Participation Ribbons"
                android:textColor="@color/black" />
            
            <TextView
                android:id="@+id/txtParticipationRibbonsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="10"
                android:textColor="@color/black" 
                android:gravity="center_horizontal"/>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txtTimeImprovementRibbons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Time Improvement Ribbons"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/txtTimeImprovementRibbonsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textColor="@color/black" 
                android:gravity="center_horizontal"/>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txtTotalRibbons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Total Ribbons "
                android:textColor="@color/black" 
                android:textStyle="bold"/>
            
              <TextView
                android:id="@+id/txtTotalRibbonsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="11"
                android:textColor="@color/black" 
                android:textStyle="bold"
                android:gravity="center_horizontal"/>
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/txtArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/arrow"
        android:gravity="right"
        android:textColor="@color/black" />

</RelativeLayout>