<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AttenadnceCodesActivity" >

    <include 
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_top"/>
    <TextView 
	    android:id="@+id/tv_attdcode_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textColor="@color/white"
	    android:background="@color/fragment_title_bg"
	    android:layout_below="@+id/layout_top"
	    android:layout_marginTop="10dp"
	    android:paddingBottom="10dp"
	    android:text="Attendance Codes"
	    android:textAppearance="?android:attr/textAppearanceMedium"
		android:paddingTop="10dp"
	    android:paddingLeft="10dp" />
    
      <RelativeLayout
            android:id="@+id/rl_codemeans_data"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/tv_attdcode_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/app_bg" >

            <ScrollView
                android:id="@+id/sv_codemeans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:scrollbars="none">

                <RelativeLayout
                    android:id="@+id/rl_codemeans_data1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_billing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:text="What is Recurring Billing?"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_billinglessons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recurring billing – Lessons:"
                        android:layout_below="@+id/tv_billing"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" 
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_codedata1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_billinglessons"
                        android:text="@string/codedata1" 
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/app_text" 
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_billingswimteam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recurring billing – Swim Team:"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" 
                        android:layout_below="@+id/tv_codedata1" 
                        android:visibility="gone"/>
                    
                    <TextView
                        android:id="@+id/tv_codedata2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_billingswimteam"
                        android:text="@string/codedata2" 
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/app_text" 
                        android:visibility="gone"/>
                    
                    <TextView
                        android:id="@+id/tv_billinglapswim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recurring billing – Lap Swim:"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" 
                        android:layout_below="@+id/tv_codedata2" 
                        android:visibility="gone"/>
                    
                    <TextView
                        android:id="@+id/tv_codedata3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_billinglapswim"
                        android:text="@string/codedata3" 
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/app_text" 
                        android:visibility="gone"/>
                    
                    <TextView
                        android:id="@+id/tv_monthlybilling"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What is Monthly Billing?"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" 
                        android:layout_below="@+id/tv_codedata3" 
                        android:visibility="gone"/>
                    
                    <TextView
                        android:id="@+id/tv_codedata4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_monthlybilling"
                        android:text="@string/codedata4" 
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/app_text"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_attendancelegend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attendance Legend"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" 
                        android:layout_below="@+id/tv_codedata4" />
                    
                    <TextView
                        android:id="@+id/tv_codedata5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_attendancelegend"
                        android:text="@string/codedata5" 
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/app_text" />
                    
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
</RelativeLayout>
