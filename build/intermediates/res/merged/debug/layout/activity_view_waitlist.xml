<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ViewWaitlistActivity" >

        <include 
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_top"/>
    <TextView 
	    android:id="@+id/tv_vw_name"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textColor="@color/white"
	    android:background="@color/fragment_title_bg"
	    android:layout_below="@+id/layout_top"
	    android:layout_marginTop="10dp"
	    android:paddingBottom="10dp"
	    android:text="Release Waitlist"
	    android:textAppearance="?android:attr/textAppearanceMedium"
		android:paddingTop="10dp"
	    android:paddingLeft="10dp" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tv_vw_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/app_bg"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/tv_vw_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:text="@string/viewwaitlist"/>
        <ListView 
            android:id="@+id/lv_vw_list"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:divider="@color/textbox_color"
            android:dividerHeight="1dp"
			android:layout_below="@+id/tv_vw_info"
			android:layout_above="@+id/btn_vw_save"
            android:layout_margin="10dp"
			android:scrollbars="none"/>
        
        <Button 
            android:id="@+id/btn_vw_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/text_blue"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Save"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp" />
	</RelativeLayout>

</RelativeLayout>
