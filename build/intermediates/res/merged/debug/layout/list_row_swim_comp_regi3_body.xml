<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:padding="5dp" >

    <TextView 
        android:id="@+id/tv_swim_comp_regi3_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_change_d2"
        android:gravity="left|center"
        android:text="Abc"
        android:textColor="@color/white"
        android:padding="5dp"/>
    
    <TextView
        android:id="@+id/txtRace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_swim_comp_regi3_name"
        android:text="Where should this swimmer start the race?"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rgRaceinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRace"

        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/radiobtnWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/customdrawableradionbuttons"
            android:padding="3dp"
            android:text="from in the water"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/radiobtnWall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/customdrawableradionbuttons"
            android:padding="3dp"
            android:text="by jumping off the wall"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/radiobtndivingblock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/customdrawableradionbuttons"
            android:padding="3dp"
            android:text="by jumping or diving off the tall diving block"
            android:textColor="@color/black" />
    </RadioGroup>

    <TextView
        android:id="@+id/txtNextSwim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:text="Does this swimmer want to swim next to the wall in an end lane?"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@+id/rgRaceinfo" />

    <RadioGroup
        android:id="@+id/rgSwimNextEndWallinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNextSwim"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/radiobtnYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/customdrawableradionbuttons"
            android:padding="3dp"
            android:text="Yes"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/radiobtnNoPreferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/customdrawableradionbuttons"
            android:padding="3dp"
            android:text="No Preference"
            android:textColor="@color/black" />
    </RadioGroup>

</RelativeLayout>