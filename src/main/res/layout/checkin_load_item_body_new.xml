<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <View
        android:id="@+id/view_temp"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/selection_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/d2_blue_border"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_chkld_item_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1.5"
                    android:text="Child:"
                    android:textColor="@color/design_change_d2"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2.5dp"
                    android:layout_weight="2" >

                    <TextView
                        android:id="@+id/tv_chkin_item_diving"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:text="Diving Block"
                        android:textColor="@color/design_change_d2"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/btn_chkld_item_divingblock"
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight=".8"
                        android:background="@drawable/drop_down1"
                        android:clickable="true"
                        android:text="Yes"
                        android:textColor="@color/app_text" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_chkld_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="Event:"
                android:textColor="@color/design_change_d2"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_chkld_distance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1.5"
                    android:text="Distancec:"
                    android:textColor="@color/design_change_d2"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2.5dp"
                    android:layout_weight="2" >

                    <TextView
                        android:id="@+id/tv_chkin_item_end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:text="End Lane"
                        android:textColor="@color/design_change_d2"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/btn_chkld_item_endlane"
                        android:layout_width="0dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight=".8"
                        android:background="@drawable/drop_down1"
                        android:text="Yes"
                        android:textColor="@color/app_text" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_chkld_stroke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="Stroke:"
                android:textColor="@color/design_change_d2"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_chkld_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Age Group:"
                    android:textColor="@color/design_change_d2"
                    android:textSize="13sp" />

                <CheckBox
                    android:id="@+id/chb_chkld_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/customdrawablecheckbox"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>