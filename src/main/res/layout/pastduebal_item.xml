<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg" >
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_pb_item_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Date:"
                android:textColor="@color/app_text" />

            <TextView
                android:id="@+id/tv_pb_item_it"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Item Type:"
                android:textColor="@color/app_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_pb_item_invoiceid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Invoice ID:"
                android:textColor="@color/app_text" />

            <TextView
                android:id="@+id/tv_pb_item_expdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Exp Date:"
                android:textColor="@color/app_text" />
        </LinearLayout>

        	<LinearLayout
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_margin="5dp"
        	    android:orientation="horizontal" >

        	    <TextView
        	        android:id="@+id/tv_pb_item_invoice_total"
        	        android:layout_width="0dp"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="center_vertical"
        	        android:layout_weight="1"
        	        android:text="Invoice Total:"
        	        android:textColor="@color/app_text" />

        	    <TextView
        	        android:id="@+id/tv_pb_item_amunt_paid"
        	        android:layout_width="0dp"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="center_vertical"
        	        android:layout_weight="1"
        	        android:text="Amount Paid:"
        	        android:textColor="@color/app_text" />
        	</LinearLayout>

    </LinearLayout>

	    <CheckBox
	        android:id="@+id/chb_pb_item_check"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:button="@drawable/customdrawablecheckbox"
	        android:layout_gravity="center"
	        android:layout_marginRight="5dp" />
	</LinearLayout>

	
			<TextView
		        android:id="@+id/tv_pb_item_bal_due"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:text="Balance Due:"
		        android:gravity="right"
		        android:paddingRight="10dp"
		        android:layout_marginBottom="2dp"
		        android:textColor="@color/app_text" />

</LinearLayout>
