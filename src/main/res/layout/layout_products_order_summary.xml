<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F6F5"
    android:orientation="horizontal"
    android:paddingTop="0dp">

    <LinearLayout
        android:id="@+id/rlTotal_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F6F5"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlTotal_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Haley"
                android:textColor="@color/gray"
                android:textSize="17sp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/txtTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="35"
                android:textColor="@color/black"
                android:textStyle="normal" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rlTotal_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlTotal_new"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp">


            <TextView
                android:id="@+id/txtPackage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/gray"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtLblPackage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/txtPackage"
                android:visibility="gone"
                android:text=" Packages"
                android:textColor="@color/gray" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlTotal_1"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:id="@+id/rlTotal_tes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtLblQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty: "
                    android:textColor="#9D9D9D"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txtQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="10"
                    android:textColor="#9D9D9D"
                    android:textStyle="normal" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/rlTotal_test"
            android:layout_marginTop="8dp"
            android:background="#9D9D9D" />
    </LinearLayout>

</LinearLayout>
