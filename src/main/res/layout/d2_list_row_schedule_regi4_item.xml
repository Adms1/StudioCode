<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/student_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/textbox_color"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Harsh"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lessonType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Private"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_back"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:background="@color/grey_days_selection">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/check_d2_lay"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <com.meg7.widget.CircleImageView
                android:id="@+id/inst_DP"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_change"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/check_d2_lay"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_schedule_regi4_classtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="01:00:00 PM"
                    android:textColor="@color/design_change_d2"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_schedule_regi4_lessontypeinstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="abc (instructor)"
                    android:textColor="@color/design_change_d2"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_schedule_regi4_Site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="abc"
                    android:textColor="@color/design_change_d2"
                    android:textSize="12sp" />


            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/chb_schedule_regi4_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/customdrawablecheckbox"
            android:gravity="center_vertical"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>