<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_rc_item_student"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:text="Student:"
                    android:textColor="@color/app_text" />

                <TextView
                    android:id="@+id/tv_rc_item_instructor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:text="Instructor"
                    android:textColor="@color/app_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_rc_item_st"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:text="Start Time:"
                    android:textColor="@color/app_text" />

                <TextView
                    android:id="@+id/tv_rc_item_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:text="Day"
                    android:textColor="@color/app_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_rc_item_lt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:text="Lesson Type:"
                    android:textColor="@color/app_text" />

                <TextView
                    android:id="@+id/tv_rc_item_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_today"
                    android:gravity="top"
                    android:text="As Of:29/09/2015"
                    android:textColor="@color/app_text"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_rc_item_date_new"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="top"
                    android:text="Remove From Schedule As Of"
                    android:textColor="@color/app_text"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/chb_rc_item_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:button="@drawable/customdrawablecheckbox" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_notice_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chb_cr_confirm"
        android:layout_margin="2dp"
        android:text="Lessons on this date and dates going forward will be removed from schedule."
        android:textColor="@color/red"
        android:textSize="12dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            android:weightSum="120" >

            <TextView
                android:id="@+id/st_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="18"
                android:maxLines="2"
                android:text="Ahan"
                android:layout_gravity="center_vertical"
                android:textColor="@color/textbox_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ls_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="17"
                android:maxLines="2"
                android:text="Semi-Private"
                android:layout_gravity="center_vertical"
                android:textColor="@color/textbox_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/inst_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="30"
                android:maxLines="1"
                android:text="Christine W"
                android:layout_gravity="center_vertical"
                android:textColor="@color/textbox_color"
                android:textSize="12sp" />
	
            <TextView
                android:id="@+id/day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                android:maxLines="1"
                android:text="Mon"
                android:layout_gravity="center_vertical"
                android:textColor="@color/textbox_color"
                android:textSize="12sp" />
            
            <TextView
                android:id="@+id/date_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:maxLines="2"
                android:text="10/25/2015 5:00 PM"
                android:layout_gravity="center_vertical"
                android:textColor="@color/textbox_color"
                android:textSize="12sp" />
            
            <ImageView 
                android:id="@+id/date_selection"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="18"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_today"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>