<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg" >
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_vw_item_student"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Student:"
                android:textColor="@color/app_text" />

            <TextView
                android:id="@+id/tv_vw_item_sd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Start Date:"
                android:textColor="@color/app_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_vw_item_instructor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Instructor"
                android:textColor="@color/app_text" />

            <TextView
                android:id="@+id/tv_vw_item_st"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Start Time:"
                android:textColor="@color/app_text" />
        </LinearLayout>

        	<LinearLayout
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_margin="5dp"
        	    android:orientation="horizontal" >

        	    <TextView
        	        android:id="@+id/tv_vw_item_lt"
        	        android:layout_width="0dp"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="center_vertical"
        	        android:layout_weight="1"
        	        android:text="Lesson Type:"
        	        android:textColor="@color/app_text" />

        	    <TextView
        	        android:id="@+id/tv_vw_item_wd"
        	        android:layout_width="0dp"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="center_vertical"
        	        android:layout_weight="1"
        	        android:text="Week Day:"
        	        android:textColor="@color/app_text" />
        	</LinearLayout>

    </LinearLayout>

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/app_text"/>
	    <CheckBox
	        android:id="@+id/chb_vw_item_check"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
			android:button="@drawable/customdrawablecheckbox"
			android:gravity="center_horizontal|center_vertical"
	         />
	    </LinearLayout>
	</LinearLayout>

	
			<TextView
		        android:id="@+id/tv_vw_item_cl"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:text="Class Type:"
		        android:gravity="right"
		        android:paddingRight="10dp"
		        android:textColor="@color/app_text" />

</LinearLayout>
