<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/white"
    tools:context=".DetailViewScheduleActivity" >

    <include 
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_top"/>
    <TextView 
	    android:id="@+id/tv_dvs_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textColor="@color/white"
	    android:background="@color/fragment_title_bg"
	    android:layout_below="@+id/layout_top"
	    android:layout_marginTop="10dp"
	    android:paddingBottom="10dp"
	    android:text="Current Schedule"
	    android:textAppearance="?android:attr/textAppearanceMedium"
		android:paddingTop="10dp"
	    android:paddingLeft="10dp" />
    
      <RelativeLayout
            android:id="@+id/rl_dvs_body"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/tv_dvs_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/app_bg" >
          
          <ScrollView 
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="10dp"
              android:scrollbars="none">
              
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  android:orientation="vertical" >

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                  	  android:layout_marginTop="10dp"
                      android:orientation="horizontal" >

                      <TextView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Date:"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="@color/black" />

                      <TextView
                          android:id="@+id/tv_dvs_date_item"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Date:"
                          android:textColor="@color/app_text" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal" >

                      <TextView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Day:"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="@color/black" />

                      <TextView
                          android:id="@+id/tv_dvs_day_item"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Day:"
                          android:textColor="@color/app_text" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal" >

                      <TextView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Time:"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="@color/black" />

                      <TextView
                          android:id="@+id/tv_dvs_time_item"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Time:"
                          android:textColor="@color/app_text" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal" >

                      <TextView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Student:"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="@color/black" />

                      <TextView
                          android:id="@+id/tv_dvs_student_item"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Student:"
                          android:textColor="@color/app_text" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal" >

                      <TextView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Age:"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="@color/black" />

                      <TextView
                          android:id="@+id/tv_dvs_age_item"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Age:"
                          android:textColor="@color/app_text" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal" >

                      <TextView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Level:"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="@color/black" />

                      <TextView
                          android:id="@+id/tv_dvs_level_item"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Level:"
                          android:textColor="@color/app_text" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal" >

                      <TextView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Instructor:"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="@color/black" />

                      <TextView
                          android:id="@+id/tv_dvs_instructor_item"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Instructor:"
                          android:textColor="@color/app_text" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal" >

                      <TextView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Attendence:"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="@color/black" />

                      <TextView
                          android:id="@+id/tv_dvs_abbr_item"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Abbr:"
                          android:textColor="@color/app_text" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal" >

                      <TextView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Lesson Type:"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="@color/black" />

                      <TextView
                          android:id="@+id/tv_dvs_lt_item"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Lesson Type:"
                          android:textColor="@color/app_text" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal" >

                      <TextView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Location:"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="@color/black" />

                      <TextView
                          android:id="@+id/tv_dvs_location_item"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Location:"
                          android:textColor="@color/app_text" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal" >

                      <TextView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Count:"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="@color/black" />

                      <TextView
                          android:id="@+id/tv_dvs_count_item"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Count:"
                          android:textColor="@color/app_text" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      android:layout_marginTop="10dp"
                      android:orientation="horizontal" >

                      <TextView
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Comments:"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="@color/black" />

                      <TextView
                          android:id="@+id/tv_dvs_comments_item"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_weight="1"
                          android:text="Comments:"
                          android:textColor="@color/app_text" />
                  </LinearLayout>

              </LinearLayout>
              
		</ScrollView>
          
	</RelativeLayout>
</RelativeLayout>
