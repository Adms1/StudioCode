<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_top" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/drawer_bg"
        android:orientation="horizontal"
        android:padding="2dp" >

        <LinearLayout
            android:id="@+id/ll_changepass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/blue_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Scout Badge Programs"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_data"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tv_swim_camps_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/app_bg"
        android:orientation="vertical"
        android:padding="10dp" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/already_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:text="Scout Programs Registrations"
                    android:textColor="@color/app_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/empty_registration"
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:textColor="@color/app_text"
                    android:layout_height="wrap_content" />
                
                <LinearLayout
                    android:id="@+id/list_registration"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:orientation="vertical" >
                </LinearLayout>
                
                 <View 
                    android:layout_height="3dp"
                    android:layout_width="fill_parent"
                    android:background="@color/black"
                    android:visibility="gone"
                    android:layout_marginBottom="5dp"
                    />
                 
                <TextView
                    android:id="@+id/upcoming_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:text="Upcoming Scout Programs"
                    android:textColor="@color/app_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/empty_upcoming"
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:textColor="@color/app_text"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/get_upcoming"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:orientation="vertical" >
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/girl_scout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="3dp"
                        android:background="@color/btn_blue"
                        android:padding="10dp"
                        android:text="Girl Scout Programs"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/swim_merit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="3dp"
                        android:background="@color/btn_blue"
                        android:padding="10dp"
                        android:text="Lifesaving/Swimming Merit Badges"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/swim_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="3dp"
                        android:background="@color/btn_blue"
                        android:padding="10dp"
                        android:text="Aquanaut/Swimming Activity Badges"
                        android:textColor="@color/white"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>