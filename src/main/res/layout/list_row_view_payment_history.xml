<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/txtSrNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="SrNo\n1"
        android:textColor="@color/black" />
    
    

    <TextView
        android:id="@+id/txtInvoiceid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:gravity="center"
        android:text="Invoice\n829820"
        android:textColor="@color/black" />
    
   

    <RelativeLayout
        android:id="@+id/relInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp" >

        <TextView
            android:id="@+id/txtItemType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Type"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtItemType"
            android:text="Item"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtInvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtItem"
            android:text="Inv Date"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/txtExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtInvDate"
            android:text="Expiry"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/txtAmountDue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtExpiry"
            android:text="AmountDue"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtAmountPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAmountDue"
            android:text="AmountPaid"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAmountPaid"
            android:text="Balance"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>