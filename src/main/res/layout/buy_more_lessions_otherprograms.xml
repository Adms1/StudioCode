<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/schdl_top"
        layout="@layout/d2_custom_buymorelession_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:fillViewport="false"
        android:scrollbars="none"
        android:scrollbarSize="1dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llSwimMeetInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/actionBar"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.meg7.widget.CircleImageView
                    android:id="@+id/inst_DP"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/logo_change" />

                <EditText
                    android:id="@+id/tv_fsn_info"
                    style="@style/text_views_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/otherPrograms_header_text" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_swim_competition"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Swim Competition"
                android:textAllCaps="false"
                android:textColor="#003D71"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_family_swim_night"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Family Swim Night"
                android:textAllCaps="false"
                android:textColor="#003D71"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_swim_teams"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Swim Teams"
                android:textAllCaps="false"
                android:textColor="#003D71"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_swim_camps"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Swim Camps"
                android:textAllCaps="false"
                android:textColor="#003D71"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_scout_Programs"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Girl Scout Programs"
                android:textAllCaps="false"
                android:textColor="#003D71"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_dive_turns"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Dives &amp; Turns Clinics"
                android:textAllCaps="false"
                android:textColor="#003D71"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_junior_lifg_prep"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Junior Lifeguard Prep Course"
                android:textAllCaps="false"
                android:textColor="#003D71"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_merit_badge"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Lifesaving/Swimming Merit Badges"
                android:textAllCaps="false"
                android:textColor="#003D71"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_activity_badge"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Aquanaut/Swimming Activity Badges"
                android:textAllCaps="false"
                android:textColor="#003D71"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_water_polo_clinics"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Water Polo Clinics"
                android:textAllCaps="false"
                android:textColor="#003D71"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_adult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Adult Only Programs"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_lap_swim"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_border"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Lap Swim"
                android:textAllCaps="false"
                android:textColor="#003D71"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_water_aerobics"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Water Aerobics"
                android:textAllCaps="false"
                android:textColor="#003D71"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <com.andexert.library.RippleView
                    android:id="@+id/ripple"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp">

                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/design_change_d2"
                        android:padding="10dp"
                        android:text="Next Step: Select Instructor"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="4dp"
                        android:layout_below="@+id/btnLogin"
                        android:background="@drawable/shadow_effect" />
                </com.andexert.library.RippleView>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>