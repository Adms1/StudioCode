<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/student_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/textbox_color"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Harsh"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lessonType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Private"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_schedule_regi4_instname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="abc"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_schedule_regi4_classtime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="01:00:00 PM"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_schedule_regi4_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="abc"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/chb_schedule_regi4_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/customdrawablecheckbox"
            android:gravity="center_vertical" />

    </LinearLayout>

    <View 
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="@color/textbox_color"
        />
</LinearLayout>