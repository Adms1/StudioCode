<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/superLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lay_list_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="5" >

        <LinearLayout
            android:id="@+id/rgLay"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight=".6"
            android:gravity="center" >

            <RadioButton
                android:id="@+id/rb_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/custom_radiobutton_orange" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1.1"
            android:gravity="center"
            android:text="Qty"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_your_cost"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1.1"
            android:gravity="center"
            android:text="Your Cost"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_reg_cost"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1.1"
            android:gravity="center"
            android:text="Reg Cost"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_saving"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1.1"
            android:gravity="center"
            android:text="Savings  "
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"/>

     <TextView
            android:id="@+id/tv_packageId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Package Id "
            android:visibility="gone" />

</LinearLayout>